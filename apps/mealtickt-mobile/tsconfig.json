{
	"extends": "@react-native/typescript-config/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"types": ["node"],
		"lib": [
			"ES2020",
			"DOM"
		],
		"paths": {
			"app/*": [
				"src/*"
			],
			"screens/*": [
				"src/screens/*"
			],
			"assets/*": [
				"assets/*"
			],
			"components/*": [
				"src/components/*"
			],
			"navigations/*": [
				"src/navigations/*"
			],
			"utils/*": [
				"src/utils/*"
			],
			"contexts/*": [
				"src/contexts/*"
			]
		}
	}
}
